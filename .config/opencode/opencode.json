{
  "$schema": "https://opencode.ai/config.json",
  "username": "Joao",
  "theme": "tokyonight",
  "model": "github-copilot/claude-opus",
  "small_model": "github-copilot/claude-haiku",
  "permission": {
    "edit": "allow",
    "bash": {
      "*": "ask",
      "ls": "allow",
      "pwd": "allow",
      "git status": "allow",
      "git diff": "allow",
      "git diff *": "allow",
      "git log": "allow",
      "git log *": "allow",
      "git branch --show-current": "allow",
      "git branch -r *": "allow",
      "git branch -vv": "allow",
      "git rev-parse *": "allow",
      "git show *": "allow",
      "grep *": "allow",
      "head *": "allow",
      "tail *": "allow"
    },
    "webfetch": "ask"
  },
  "tools": {
    "tavily_*": false
  },
  "agent": {
    "general": {
      "model": "github-copilot/claude-haiku"
    },
    "explore": {
      "model": "github-copilot/claude-haiku"
    },
    "plan": {
      "tools": {
        "tavily_*": true
      }
    },
    "ask": {
      "mode": "primary",
      "color": "#FF0017",
      "tools": {
        "*": false,
        "read": true,
        "webfetch": true,
        "grep": true,
        "glob": true,
        "list": true,
        "context7_*": true,
        "tavily_*": true
      }
    }
  },
  "instructions": [
    "CONTRIBUTING.md",
    "CONVENTIONS.md",
    "README.md",
    "docs/guidelines.md",
    ".cursor/rules/*.md",
    ".config/opencode/instructions/*.md"
  ],
  "keybinds": {
    "leader": "ctrl+space",
    "input_newline": "ctrl+n"
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    },
    "tavily": {
      "type": "remote",
      "url": "https://mcp.tavily.com/mcp/?tavilyApiKey={env:TAVILY_API_KEY}",
      "enabled": true
    }
  }
}
